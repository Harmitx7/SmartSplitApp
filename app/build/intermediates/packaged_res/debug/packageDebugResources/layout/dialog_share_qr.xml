<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_dark_background"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Group"
        android:textColor="@color/text_on_dark"
        android:textSize="@dimen/text_title"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_md" />

    <!-- QR Code -->
    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:padding="8dp"
        android:contentDescription="QR Code" />

    <!-- Group Name -->
    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_lime"
        android:textSize="@dimen/text_body"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/spacing_md" />

    <!-- Instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let others scan this code to join"
        android:textColor="@color/text_muted"
        android:textSize="@dimen/text_caption"
        android:layout_marginTop="@dimen/spacing_xs" />

    <!-- Share Button -->
    <Button
        android:id="@+id/btn_share_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_lime"
        android:text="ðŸ“¤  Share Image"
        android:textColor="@color/text_on_lime"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/spacing_lg"
        android:padding="@dimen/spacing_md" />

</LinearLayout>
