<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:context=".MainActivity">

    <!-- Main content area -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_card_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/accent_lime" />

            <TextView
                android:id="@+id/nav_home_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/accent_lime"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Stats Tab -->
        <LinearLayout
            android:id="@+id/nav_stats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_stats_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chart"
                app:tint="@color/text_muted" />

            <TextView
                android:id="@+id/nav_stats_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Center FAB Spacer -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- History Tab -->
        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_history_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                app:tint="@color/text_muted" />

            <TextView
                android:id="@+id/nav_history_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_muted" />

            <TextView
                android:id="@+id/nav_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Center FAB (elevated above bottom nav) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="10dp">

        <FrameLayout
            android:id="@+id/nav_center_fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/fab_lime"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                app:tint="@color/white" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Group"
            android:textColor="@color/accent_lime"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/card_dark_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
