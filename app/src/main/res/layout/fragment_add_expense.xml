<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_xl">
        
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp" 
            app:tint="@color/text_on_dark"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:textColor="@color/text_on_dark"
            android:textSize="@dimen/text_title"
            android:textStyle="bold" 
            android:layout_marginStart="@dimen/spacing_md"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Description Row with Emoji -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_md">

                <!-- Emoji Display/Picker -->
                <TextView
                    android:id="@+id/tv_emoji_icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="â˜º"
                    android:textSize="32sp"
                    android:background="@drawable/card_dark_background"
                    android:gravity="center"
                    android:textColor="@color/text_on_dark"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:clickable="true"
                    android:focusable="true"/>

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/card_dark_background"
                    android:padding="@dimen/spacing_md"
                    android:textColor="@color/text_on_dark"
                    android:textColorHint="@color/text_muted"
                    android:hint="What was this for?"
                    android:inputType="textCapSentences" />
            </LinearLayout>

            <!-- Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount (INR)"
                android:textColor="@color/text_muted"
                android:textSize="@dimen/text_caption"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_dark_background"
                android:padding="@dimen/spacing_md"
                android:textColor="@color/text_on_dark"
                android:textColorHint="@color/text_muted"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/text_muted"
                android:textSize="@dimen/text_caption"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_dark_background"
                android:minHeight="50dp"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Paid By -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid By"
                android:textColor="@color/text_muted"
                android:textSize="@dimen/text_caption"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <Spinner
                android:id="@+id/spinner_payer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_dark_background"
                android:minHeight="50dp"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <Button
                android:id="@+id/btn_add_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_lime"
                android:text="Save Expense"
                android:textColor="@color/bg_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
