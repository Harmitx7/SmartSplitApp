<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/text_on_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_settings_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/bg_card_dark"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">
                
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/accent_lime">
                    
                    <TextView
                        android:id="@+id/tv_settings_initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="US"
                        android:textColor="@color/bg_dark"
                        android:textStyle="bold"
                        android:textSize="24sp"/>

                    <ImageView
                        android:id="@+id/iv_settings_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_camera"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>
                </androidx.cardview.widget.CardView>
                
                <ImageView
                    android:id="@+id/btn_settings_edit_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/fab_lime"
                    android:padding="4dp"
                    app:tint="@color/white"
                    android:elevation="4dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_settings_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/text_on_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_settings_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_muted" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Menu Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textColor="@color/accent_lime"
        android:layout_marginBottom="8dp" />

    <!-- App Settings -->
    <TextView
        android:id="@+id/btn_app_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:textColor="@color/text_on_dark"
        android:padding="16dp"
        android:background="@drawable/input_background_dark"
        android:layout_marginBottom="8dp" />

    <!-- Terms -->
    <TextView
        android:id="@+id/btn_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textColor="@color/text_on_dark"
        android:padding="16dp"
        android:background="@drawable/input_background_dark"
        android:layout_marginBottom="8dp" />
        
    <!-- About -->
    <TextView
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About This App"
        android:textColor="@color/text_on_dark"
        android:padding="16dp"
        android:background="@drawable/input_background_dark"
        android:layout_marginBottom="24dp" />

    <!-- Logout -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_clear_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All Data"
        android:backgroundTint="@color/negative"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNDER DEVELOPMENT"
        android:gravity="center"
        android:textColor="@color/text_muted"
        android:alpha="0.5"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:textSize="12sp"
        android:padding="24dp" />

</LinearLayout>
