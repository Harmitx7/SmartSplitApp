<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_xl">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="4dp"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textColor="@color/text_on_dark"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Overview Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_lime_background"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Spending"
                android:textColor="@color/text_on_lime"
                android:alpha="0.7"
                android:textSize="@dimen/text_caption" />

            <TextView
                android:id="@+id/tv_total_spending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textColor="@color/text_on_lime"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_lg">

            <!-- Groups Card -->
            <LinearLayout
                android:id="@+id/btn_stats_groups"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_dark_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md"
                android:layout_marginEnd="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_group"
                    android:contentDescription="Groups" />

                <TextView
                    android:id="@+id/tv_total_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent_lime"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textColor="@color/text_muted"
                    android:textSize="@dimen/text_caption" />
            </LinearLayout>

            <!-- Expenses Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_dark_background"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md"
                android:layout_marginStart="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_credit_card"
                    android:contentDescription="Expenses" />

                <TextView
                    android:id="@+id/tv_total_expenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent_lime"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses"
                    android:textColor="@color/text_muted"
                    android:textSize="@dimen/text_caption" />
            </LinearLayout>
        </LinearLayout>

        <!-- Trend Graph Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spending Trend"
            android:textColor="@color/text_on_dark"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_md" />

        <com.example.smartsplitter.ui.SimpleTrendGraph
            android:id="@+id/graph_trend"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:background="@drawable/card_dark_background"
            android:padding="8dp"/>

        <!-- Category Breakdown Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spending by Category"
            android:textColor="@color/text_on_dark"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Category List -->
        <LinearLayout
            android:id="@+id/layout_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
