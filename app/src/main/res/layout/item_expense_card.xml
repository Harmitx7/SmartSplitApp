<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_gradient"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_md"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:gravity="center_vertical">

    <!-- Category Icon -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/icon_background">
        <ImageView
            android:id="@+id/iv_category_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_food"
            android:contentDescription="Category" />
    </FrameLayout>

    <!-- Expense Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/spacing_md">

        <TextView
            android:id="@+id/tv_expense_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_dark"
            android:textSize="@dimen/text_body"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Dinner at Restaurant" />

        <TextView
            android:id="@+id/tv_expense_payer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="@dimen/text_caption"
            android:layout_marginTop="2dp"
            tools:text="Paid by John" />
    </LinearLayout>

    <!-- Amount & Date -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negative"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            tools:text="-â‚¹45.00" />

        <TextView
            android:id="@+id/tv_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="@dimen/text_caption"
            android:layout_marginTop="2dp"
            tools:text="Today" />
    </LinearLayout>

</LinearLayout>
