<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SmartSplitter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_cyan</item>
        <item name="colorSecondaryVariant">@color/accent_cyan_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/bg_dark</item>
        <item name="colorSurface">@color/bg_card_dark</item>
        <item name="colorOnSurface">@color/text_on_dark</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_on_dark</item>
        <item name="android:textColorSecondary">@color/text_muted</item>
    </style>
</resources>
